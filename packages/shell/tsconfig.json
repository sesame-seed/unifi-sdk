{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "build",
    "declarationDir": ".",
    "importHelpers": true
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "build",
    "node_modules",
    "src/**/*.stories.tsx",
    "src/__mocks__/*",
    "src/__tests__/**/*"
  ]
}